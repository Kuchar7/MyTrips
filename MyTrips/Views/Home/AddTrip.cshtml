@model MyTrips.Models.ViewModels.AddTripVM

@{
    ViewBag.Title = "AddTrip";
}


<main>
    <p class="display-4 text-center border-bottom py-2 mt-3">Nowa wycieczka</p>
    <div class="d-flex justify-content-center ">
        @using (Html.BeginForm("AddTrip", "Home", FormMethod.Post, new { @class = "row col-6", @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="input-group input-group-lg mb-3 col-6">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
                @Html.TextBoxFor(Model => Model.LaunchSite, new { @class = "form-control", @placeholder = "Miejsce startu" })
            </div>
            <div class="input-group input-group-lg mb-3 col-6">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
                @Html.TextBoxFor(Model => Model.Destination, new { @class = "form-control", @placeholder = "Miejsce zakończenia" })
            </div>
            <div class="input-group input-group-lg mb-3 col-4 ">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
                @Html.EditorFor(Model => Model.StartDate, new
           {
               htmlAttributes = new
               {
                   @placeholder = "Data startu:",
                   @class = "form-control"
               }
           })
            </div>
            <div class="input-group input-group-lg mb-3 col-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
                @Html.EditorFor(Model => Model.EndDate, new
           {
               htmlAttributes = new
               {
                   @placeholder = "Data zakończenia:",
                   @class = "form-control"
               }
           })
            </div>
            <div class="input-group input-group-lg mb-3 col-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
                @Html.TextBoxFor(Model => Model.Kilometers, new { @type = "number", @class = "form-control", @placeholder = "Liczba kilometrów" })

            </div>

            <div class="input-group input-group-lg mb-3 col-12">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
                @Html.TextAreaFor(Model => Model.Description, new { @rows = "6", @class = "form-control", @placeholder = "Opis wycieczki" })
            </div>
            <div class="input-group input-group-lg mb-3 col-6">
                <div class="custom-file">
                    <input multiple type="file" class="custom-file-input" id="images" name="images" accept="image/*">
                    <label class="custom-file-label" data-browse="Wybierz" for="images">Wybrane zdjęcia:</label>
                </div>
            </div>
            <div class="input-group input-group-lg mb-3 col-6">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="video" name="video" accept="video/*">
                    <label class="custom-file-label" data-browse="Wybierz" for="video">Wybrane filmy:</label>
                </div>
            </div>
            <div class="ml-1 mt-1">
                @Html.ValidationSummary(false, "", new { @class = "text-danger ml-5" })
            </div>
            <div class="my-2 col-12 text-center">
                <button type="submit" class="btn btn-outline-dark submit-btn">Dodaj</button>
            </div>
        }
    </div>
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function checkFilesCount(id) {
            if (id.images.length > 1) {
                alert('you cant upload files more than 5');
                document.getElementById("t").value = "";
            }
        }
    </script>

}

