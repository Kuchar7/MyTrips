@model List<MyTrips.Models.ViewModels.ListTripVM>
@{
    ViewBag.Title = "Home Page";
}

<main>
    <p class="display-4 text-center border-bottom py-2 mt-3">galeria</p>
    <div class="container py-3">
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-2 col-lg-3 py-2">
                    <div class="card border border-dark ">
                        <img class="card-img-top " src="@Url.Content(item.Photo.ImagePath)" alt="Zdjęcie">
                        
                        <div class="card-body">
                            <div class="d-flex justify-content-center flex-column mb-2">
                                <p class="align-self-center m-0">@Html.DisplayFor(modelItem => item.LaunchSite)</p>
                                <p class="align-self-center m-0">@Html.DisplayFor(modelItem => item.Destination)</p>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <button onclick="location.href='@Url.Action("DetailsTrip", "Home", new {id= item.Id })'" class="btn btn-outline-dark px-4">Pokaż</button>
                                <p class="align-self-center m-0">@Html.DisplayFor(modelItem => item.StartDate)</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>